    <title>Fake Store</title>
    <script>
        const loadapi = () => {
    fetch("https://fakestoreapi.com/products")
    
      .then ((res) => res.json())
      .then ((data) => getproduct(data))


};




const displayproduct = (product) =>{
    return (`

