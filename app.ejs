                <option>Qty:4</option>
                <option>Qty:5</option>
                <option>Qty:6</option>
              </select>
              
             
              <h5> Free delivery ðŸ›’</h5>

              
            </div>    
             

        
        
        
        
            `)
};

const getproduct = (products) =>{
    const displayui = products.map((product) => displayproduct(product));
    const contain = document.getElementById('products')
    contain.innerHTML =displayui.join()
    
};
loadapi();

    </script>
  
